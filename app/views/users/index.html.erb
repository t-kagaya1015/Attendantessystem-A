<% provide(:title, 'All Users') %>
<h1>ユーザ一覧</h1>
 <thead>
  <div class="row">
  <div class="boxContainer">
   <div class="flex-box"> 
    <div class="flex-item">
     <%= will_paginate %>
    </div>
     <div class="flex-box">  <!--曖昧検索ボタン変更まだ不可-->
      <div class="flex-item">
        <%= form_tag(users_path, method: "get") do %>
        <%= label_tag :name, "名前" %><%= text_field_tag :name, params[:name] %>
        <!--%= label_tag :name, "性別" %>-->
        <%= select_tag :gender, options_for_select(User.genders), include_blank: true %>
        <%= submit_tag "検索" %>
        <% end %>
      </div>
    </div>
   </div>
      <title><%= full_title(yield(:title)) %></title>
     
    </div>
  </div>
    <table class="table table-condensed table-hover" id="table-users">
  </div>
 </div>
</thead>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
          <th class="center"><!--%= User.human_attribute_name :department %--></th>
          <% if current_user.admin? %>
            <!--th class="center"><!--%= User.human_attribute_name :basic_time %></th>
            <th class="center"><!--%= User.human_attribute_name :work_time %--></th>
          <% end %>
          <th></th>
        </tr>
 </thead>

    <% @users.each do |user| %>
      <tr>
        <td>
          <% if current_user.admin? %>
            <%= link_to user.name, user %>
          <% else %>
            <%= user.name %>
          <% end %>
        </td>
        <!--td class="center"><!--%= user.department.present? ? user.department : "未所属" %></td-->
        <!--% if current_user.admin? %>
          <td class="center"><!--%= format_basic_info(user.basic_time) %></td-->
          <!--td class="center"><!--%= format_basic_info(user.work_time) %></td-->
      
        <td class="center">
          <% if current_user.admin? && !current_user?(user) %>
          <%= link_to "基本情報編集", edit_basic_info_user_path(user), class: "btn btn-ligit" %>
            <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してよろしいですか？" }, class: "btn btn-ligit" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>

